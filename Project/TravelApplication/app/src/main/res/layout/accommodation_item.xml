<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_background">

    <TextView
        android:id="@+id/checkInView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-in Date: 01/01/2024"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/checkOutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-out Date: 01/07/2024"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/locationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: New York"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/numRoomsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms: 2"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/roomTypeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Type: Single"
        android:textSize="16sp"/>

</LinearLayout>